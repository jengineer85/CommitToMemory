<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tutorialview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
 
    >
        
    <FrameLayout
    android:id="@+id/tutorial_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
  
   <TextView 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:id="@+id/status_tutorial"
		android:textSize="25sp" 
		android:layout_marginRight= "10dp"
		android:layout_gravity="top|right"
		android:textStyle="italic"/>
   
      <TextView 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:id="@+id/header_tutorial"
		android:textSize="35sp" 
		android:textColor="#CF4141"
		android:layout_gravity="top|center_vertical|center_horizontal"
		android:gravity="center"
		android:layout_marginTop= "55dp"/>
      
      <TextView 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:id="@+id/action_tutorial"
		android:textSize="60sp" 
		android:textColor="#CF4141"
		android:layout_gravity="center"
		android:gravity="center"
		
		android:layout_marginTop= "30sp"/>
   
      <TextView 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:id="@+id/index_tutorial"
		android:textSize="25sp" 
		android:layout_marginRight= "10dp"
		android:layout_gravity="bottom|right"
		android:textStyle="italic"/>
   
</FrameLayout>

</LinearLayout>
